#!/bin/sh

d() {
    date +%Y_%m_%d-%H_%M_%S
}

dir() {
    echo "starting with $1 ($(d))"
    cd $1
    git remote update
    LOCAL=$(git rev-parse @)
    REMOTE=$(git rev-parse '@{u}')
    BASE=$(git merge-base @ '@{u}')
    if [ $LOCAL = $REMOTE ]; then
        echo "Sleeping for 100 secs"
        sleep 100
    elif [ $LOCAL = $BASE ]; then
        git pull
        echo "starting build"
        sh ci.sh $(d)_$REMOTE
        echo "build finished"
    elif [ $REMOTE = $BASE ]; then
        echo "Warning: You have local changes."
    else
        echo "Error: Your local repo is broken."
        exit 1
    fi
    echo "done with f_cking $1 ($(d))"
}

I=0

while true ; do
    ping -c 1 1.1.1.1 || { echo "[ERROR] NO INTERNET" ; sleep 30 ; continue ; }
    for proj in AmplissimusApp Artillar ; do
        I=$(($I + 1))
        dir ~/$proj 2>&1 | tee -a /usr/local/var/www/log.txt
    done
    if [ $I -gt 20 ] ; then
        I=0
        fn=/usr/local/var/www/log_$(d).txt
        mv -f /usr/local/var/www/log.txt $fn
        xz -9 $fn
    fi
done
